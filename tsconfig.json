{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["src/**/*.stories.tsx"]
}
